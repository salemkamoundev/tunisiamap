import { Injectable } from '@angular/core';
import { HttpClient } from '@angular/common/http';
import { Observable } from 'rxjs';

export interface Location {
  nom: string;
  categorie: string;
  lat: number;
  lng: number;
}

export interface BudgetLocation {
  Code_Municipalite_INS: string;
  Nom_Municipalite_Ar: string;
  depenses_realisation: string;
  lat: string;
  lng: string;
  [key: string]: any;
}

@Injectable({
  providedIn: 'root'
})
export class MapDataService {
  private dataUrl = 'assets/all_locations.json';
  private budgetUrl = 'assets/budget2021.json';

  constructor(private http: HttpClient) { }

  getLocations(): Observable<Location[]> {
    return this.http.get<Location[]>(this.dataUrl);
  }

  getBudget2021(): Observable<BudgetLocation[]> {
    return this.http.get<BudgetLocation[]>(this.budgetUrl);
  }
}
